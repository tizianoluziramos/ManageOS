{
  "commands": [
    {
      "pre": "Compiling Mouse Controller...",
      "command": "gcc -m32 src\\Mouse\\mouse.c -o src\\Mouse\\mouse.exe -mwindows",
      "after": "Mouse Controller compiled."
    },
    {
      "pre": "Compiling Keyboard Controller...",
      "command": "gcc -m32 src\\Keyboard\\keyboard.c -o src\\Keyboard\\keyboard.exe -mwindows",
      "after": "Keyboard Controller compiled."
    },
    {
      "pre": "Compiling HTTP Server...",
      "command": "gcc src\\Server\\HTTP\\http.c -o src\\Server\\HTTP\\http.exe -lws2_32",
      "after": "HTTP Server compiled."
    },
    {
      "pre": "Compiling TypeScript...",
      "command": "tsc",
      "after": "TypeScript compiled."
    },
    {
      "pre": "Copying executables...",
      "command": "xcopy src\\*.exe dist /S /Y /I",
      "after": "Executables copied."
    },
    {
      "pre": "Copying libraries...",
      "command": "xcopy src\\*.dll dist /S /Y /I",
      "after": "Libraries copied."
    },
    {
      "pre": "Deleting temporary mouse.exe...",
      "command": "del /Q src\\Mouse\\mouse.exe",
      "after": "mouse.exe deleted."
    },
    {
      "pre": "Deleting temporary keyboard.exe...",
      "command": "del /Q src\\Keyboard\\keyboard.exe",
      "after": "keyboard.exe deleted."
    },
    {
      "pre": "Deleting temporary http.exe...",
      "command": "del /Q src\\Server\\HTTP\\http.exe",
      "after": "http.exe deleted."
    },
    {
      "pre": "Generating documentation with Typedoc...",
      "command": "npx typedoc --options typedoc.json --json docs/openapi.json",
      "after": "Documentation generated."
    }
  ]
}
