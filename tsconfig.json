{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2020", "DOM"],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
